{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "strict": false,
    "baseUrl": "src",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  }
}
